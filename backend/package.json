{
	"name": "red-tetris-backend",
	"version": "1.0.0",
	"authors": [
		"Aude LaÃ«titia Lellouche <alellouc@student.42nice.fr>",
		"Bryan Ledda <bledda@student.42nice.fr>"
	],
	"main": "app.js",
	"scripts": {
		"env": "npx ts-node configSetup.ts",
		"build": "npx tsc --build",
		"start": "npm run env && npm run build && TZ='UTC' node dist/app.js",
		"dev": "npm run rm && npm run env && npm run dev:backend",
		"install:frontend": "npm install -C ../frontend",
		"build:frontend": "npm run build -C ../frontend",
		"prod:frontend": "npm run preview -C ../frontend -- --open",
		"ibp:frontend": "npm run install:frontend && npm run build:frontend && npm run prod:frontend",
		"dev:frontend": "concurrently \"npm run dev\" \"npm run ibp:frontend\"",
		"dev:backend": "TZ='UTC' DEV='1' nodemon src/app.ts",
		"lint": "prettier . --check . && eslint .",
		"lint:fix": "prettier --check . && eslint . --fix",
		"format": "prettier --write .",
		"indent": "npm run format && npm run lint",
		"ibt": "npm run indent && npm run build && npm run test:rm",
		"env:rm": "rm -rf .env",
		"logs:rm": "rm -rf ./logs/*.txt",
		"tests:rm": "rm -rf ./src/tests/output.txt",
		"rm": "concurrently \"npm run env:rm\" \"npm run logs:rm\" \"npm run tests:rm\" ",
		"test": "npm run env && UNITSTESTS='1' jest --detectOpenHandles --no-cache --forceExit > src/tests/output.txt",
		"test:rm": "npm run test && npm run tests:rm",
		"test:dev": "jest --coverage --detectOpenHandles --watchAll --no-cache",
		"test:open": "open src/tests/coverage-reports/lcov-report/index.html"
	},
	"license": "ISC",
	"devDependencies": {
		"@babel/preset-env": "^7.22.15",
		"@babel/preset-typescript": "^7.22.15",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.10",
		"@types/node": "^20.10.0",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^9.0.6",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.0",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-prettier": "^5.0.0",
		"jest": "^29.6.4",
		"nodemon": "^3.0.1",
		"prettier": "^3.0.3",
		"socket.io": "^4.7.2",
		"socket.io-client": "^4.7.2",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.2"
	},
	"dependencies": {
		"body-parser": "^1.20.2",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"supertest": "^6.3.3",
		"uuid": "^9.0.1"
	}
}
