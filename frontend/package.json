{
	"name": "red-tetris-frontend",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "npm run build:svelteconfig && vite dev",
		"build": "npm run build:svelteconfig && vite build",
		"build:svelteconfig": "esbuild svelte.config.ts --outfile=svelte.config.js",
		"preview": "vite preview",
		"test:playwright": "playwright test",
		"test:vitest": "vitest run",
		"check": "npm run build:svelteconfig && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "npm run build:svelteconfig && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.39.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.27.2",
		"@testing-library/dom": "^9.3.3",
		"@testing-library/jest-dom": "^6.1.3",
		"@testing-library/svelte": "^4.0.4",
		"@testing-library/user-event": "^14.5.1",
		"@types/testing-library__jest-dom": "^6.0.0",
		"@typescript-eslint/eslint-plugin": "^6.9.1",
		"@typescript-eslint/parser": "^6.9.1",
		"@vitest/coverage-c8": "^0.33.0",
		"eslint": "^8.52.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prefer-arrow-functions": "^3.1.4",
		"eslint-plugin-svelte": "^2.34.0",
		"jsdom": "^22.1.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"sass": "^1.69.0",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"tslib": "^2.4.1",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vitest": "^0.34.6"
	},
	"type": "module",
	"dependencies": {
		"playwright": "^1.38.1",
		"socket.io-client": "^4.7.2"
	}
}
